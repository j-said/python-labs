
#Створити клас “Ноутбук” rотрий містить поля:
#- швидкодія процесору (CPU, в гігагерцах)
#- об'єм оперативної пам'яті
#- назва фірми-виробника

class LapTop():
    def __init__(self, proc="Name", cpu=0.0, ram=0.0, brand="Name"):
        # Приватні поля
        self.__proc = proc
        self.__cpu = cpu
        self.__ram = ram
        self.__brand = brand
    # Деструктор
    def __del__(self):
        print(f"Знищено {self.__brand}!")
        del self

    def get_proc(self):
        return self.__proc

    def set_proc(self, proc):
        self.__proc = proc

    def get_cpu(self):
        return self.__cpu

    def set_cpu(self, cpu):
        self.__cpu = cpu

    def get_ram(self):
        return self.__ram

    def set_ram(self, ram):
        self.__ram = ram

    def get_brand(self):
        return self.__brand

    def set_brand(self, brand):
        self.__brand = brand

    def __str__(self):
        return f"LapTop: Процесор {self.__proc}: {self.__cpu} ГГц, Обсяг оперативної пам'яті: {self.__ram} Гб, Виробник: {self.__brand}"

    def __repr__(self):
        return f"LapTop(proc = '{self.__proc}', cpu={self.__cpu}, ram={self.__ram}, brand= '{self.__brand}')"

if __name__ == '__main__':
    object_1 = LapTop("Intel", 2.2, 16, "Lenovo")
