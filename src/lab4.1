пшеclass LapTop():
    def __init__(self, proc="Name", cpu=0.0, ram=0.0, brand="Name"):
        # Приватні поля
        self.__proc = proc
        self.__cpu = cpu
        self.__ram = ram
        self.__brand = brand
    # Деструктор
    def __del__(self):
        print(f"Знищено {self.__brand}!")
        del self

    @property
    def proc(self):
        return self.__proc
    
    @proc.setter
    def proc(self, proc):
        self.__proc = proc
    
    @property
    def cpu(self):
        return self.__cpu
    @cpu.setter
    def cpu(self, cpu):
        self.__cpu = cpu
    
    @property
    def ram(self):
        return self.__ram
    @ram.setter
    def ram(self, ram):
        self.__ram = ram
    
    @property
    def brand(self):
        return self.__brand
    
    @brand.setter
    def brand(self, brand):
        self.__brand = brand

    def __str__(self):
        return f"LapTop: Процесор {self.__proc}: {self.__cpu} ГГц, Обсяг оперативної пам'яті: {self.__ram} Гб, Виробник: {self.__brand}"

    def __repr__(self):
        return f"LapTop(proc = '{self.__proc}', cpu={self.__cpu}, ram={self.__ram}, brand= '{self.__brand}')"

